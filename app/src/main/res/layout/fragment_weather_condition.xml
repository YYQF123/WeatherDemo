<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather_background_01"
    tools:context=".WeatherConditionFragment">

    <LinearLayout
        android:id="@+id/weather_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/weather_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bj"
                android:textSize="65sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/weather_temperature"
                style="@style/weather_text"
                android:layout_below="@+id/weather_city"
                android:textSize="30sp"
                android:text="12℃" />

            <TextView
                android:id="@+id/weather_condition"
                style="@style/weather_text"
                android:layout_below="@id/weather_temperature"
                android:layout_toRightOf="@+id/weather_temperature"
                android:layout_alignTop="@id/weather_temperature"
                android:layout_marginLeft="20dp"
                android:textSize="30sp"
                android:text="@string/xy" />

            <ImageView
                android:id="@+id/weather_iv_condition"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/weather_temperature"
                android:src="@drawable/sunny" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/weather_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/weather_forecast_bg"
            android:orientation="vertical"
            android:padding="10dp">

        </LinearLayout>
        <!--        各种指数-->
        <LinearLayout
            android:id="@+id/weather_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/weather_forecast_bg"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/index_dress"
                    style="@style/index_text"
                    android:drawableBottom="@drawable/index_clothes"
                    android:text="穿衣指数" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#040400" />

                <TextView
                    android:id="@+id/index_car"
                    style="@style/index_text"
                    android:drawableBottom="@drawable/index_car"
                    android:text="洗车指数" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#040400" />

                <TextView
                    android:id="@+id/index_cold"
                    style="@style/index_text"
                    android:drawableBottom="@drawable/index_cold"
                    android:text="感冒指数" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/index_comfort"
                    style="@style/index_text"
                    android:drawableBottom="@drawable/index_comfort"
                    android:text="舒适度指数" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#040400" />

                <TextView
                    android:id="@+id/index_zwx"
                    style="@style/index_text"
                    android:drawableBottom="@drawable/index_zwx"
                    android:text="紫外线指数" />
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#040400" />

                <TextView
                    android:id="@+id/index_travel"
                    style="@style/index_text"
                    android:drawableBottom="@drawable/index_travel"
                    android:text="旅游指数" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>